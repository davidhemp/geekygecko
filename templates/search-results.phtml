{% include 'header.phtml' %}

<div class="container">
    {% for product in searchResults %}
        <div class="col-md-4 col-sm-6 col-xs-12 tcenter info">
            <div class="row">
                <div class="row">
                    <a href="?s={{ product.id }}">
                        <img class="col-md-12" width="80%" src="media/products/{{ product.id}}.jpg">
                    </a>
                </div>
                <div class="row">
                    <div class="col-md-12"><h4>{{ product.name }}</h4></div>
                </div>
                <div class="row">
                    <div class="col-md-6">&pound{{ product.price }}</div>
                    <div class="col-md-6">{{ product.quantity }} available to buy</div>
                </div>
                <div class="row">
                    <div class="col-md-12">Buy | <a href="?s={{ product.id }}">More details</a></div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
