{% include 'header.phtml' %}

<div class="container">
    {% for product in searchResults %}
        <div class="col-md-4 col-sm-6 col-xs-12 tcenter info">
            <div class="row">
                <div class="row">
                    <a href="?s={{ product.id }}">
                        <img class="col-md-12" width="80%" src="media/products/{{ product.id}}.jpg">
                    </a>
                </div>
                <div class="row">
                    <div class="col-md-12"><h4><a href="?s={{ product.id }}">{{ product.name }}</a></h4></div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-2 col-xs-2  col-xs-offset-2">&pound{{ product.price }}</div>
                    <div class="col-md-4 col-xs-4">{{ product.quantity }} available</div>
                    <div class="col-md-3 col-xs-4"><a href="?s={{ product.id }}">Buy Now</a></div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
